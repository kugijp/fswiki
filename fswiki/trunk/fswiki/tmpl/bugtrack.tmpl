  </tr>
  <tr>
    <th>サマリ</th>
    <td><input type="text" name="subject" size="60"></td>
  </tr>
  <tr>
    <th>カテゴリ</th>
    <td>
      <select name="category">
      <!--TMPL_LOOP NAME="CATEGORY"-->
